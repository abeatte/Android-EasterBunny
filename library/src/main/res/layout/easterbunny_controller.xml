<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/easterbunny_controller"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/eb_nes_background_dark"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/eb_nes_background_light"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="8dp" >

    <Button
        style="@style/Widget.EasterBunny.Nes.Button"
        android:id="@+id/controller_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/controller_button_b"/>

    <Button
        style="@style/Widget.EasterBunny.Nes.Button"
        android:id="@+id/controller_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/controller_b"
        android:layout_margin="8dp"
        android:text="@string/controller_button_a"/>

    </RelativeLayout>

</FrameLayout>
