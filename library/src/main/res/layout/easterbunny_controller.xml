<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/easterbunny_controller"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:padding="8dp" >

    <Button
        android:id="@+id/controller_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple"
        android:layout_margin="8dp"
        android:text="@string/controller_button_b"/>

    <Button
        android:id="@+id/controller_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/controller_b"
        android:background="@android:color/holo_purple"
        android:layout_margin="8dp"
        android:text="@string/controller_button_a"/>

</RelativeLayout>
