<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/easterbunny_controller"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/nes_background"
    android:layout_gravity="center"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/nes_button_pack_background"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp">


        <FrameLayout
            android:id="@+id/controller_b_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nes_button_background"
            android:layout_marginRight="8dp"
            android:padding="4dp">

            <Button
                style="@style/Widget.EasterBunny.Nes.Button"
                android:id="@+id/controller_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/controller_b_container"
            android:layout_alignRight="@id/controller_b_container"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="@string/controller_button_b"
            android:textColor="@color/eb_nes_red"/>

        <FrameLayout
            android:id="@+id/controller_a_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nes_button_background"
            android:layout_toRightOf="@id/controller_b_container"
            android:padding="4dp" >

            <Button
                style="@style/Widget.EasterBunny.Nes.Button"
                android:id="@+id/controller_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/controller_a_container"
            android:layout_alignRight="@id/controller_a_container"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="@string/controller_button_a"
            android:textColor="@color/eb_nes_red"/>

    </RelativeLayout>
</FrameLayout>

